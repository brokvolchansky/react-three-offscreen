{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2018",
    "lib": ["ES2018", "DOM", "WebWorker"],
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "strict": true,
    "preserveSymlinks": true,
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist",
    "skipLibCheck": true,
    "removeComments": false
  },
  "include": ["src"]
}
